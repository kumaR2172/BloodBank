<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00f2fe"
    tools:context=".Register">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Name"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Age"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:hint="Age"
            android:inputType="numberSigned"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/City"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="379dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="272dp"
            android:inputType="none"
            android:text="Authentication detail:"
            android:textColor="#09282B"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="394dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/Male"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="464dp"
            android:layout_marginEnd="237dp"
            android:text="Male"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/Female"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="464dp"
            android:layout_marginEnd="49dp"
            android:text="Female"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/Donar"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="534dp"
            android:layout_marginEnd="150dp"
            android:text="Donar"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="138dp"
            android:layout_height="42dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="603dp"
            android:layout_marginEnd="237dp"
            android:inputType="none"
            android:text="Blood group"
            android:textColor="#09282B"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/Bloodgroup"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="605dp"
            android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Spinner>

        <Button
            android:id="@+id/Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="179dp"
            android:background="@drawable/buttton_round"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>